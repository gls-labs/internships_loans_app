doctype html
html
  head
    meta content="text/html; charset=UTF-8" http-equiv="Content-Type"
    title Landing
    meta content="width=device-width,initial-scale=1" name="viewport"
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag :landing, media: :all,
                                    'data-turbolinks-track': :reload
    = stylesheet_link_tag :new_landing, media: :all,
                                    'data-turbolinks-track': :reload
    = javascript_pack_tag :landing, 'data-turbolinks-track': :reload

  body
    = render partial: 'layouts/landing_navbar'
    = yield
